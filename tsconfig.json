{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./src/server",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "experimentalDecorators": true, // Включить поддержку декораторов
    "emitDecoratorMetadata": true   // Включить генерацию метаданных для декораторов
  },
  "include": ["src/server/**/*"],
  "exclude": ["src/client/**/*"]
}
