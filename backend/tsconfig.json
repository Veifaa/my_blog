{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "backend/src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["backend/src/**/*"],
  "exclude": ["backend/static/**/*"]
}
